---
import Layout from "../layouts/Layout.astro";
import ParticipantListItem from "../components/ParticipantListItem.astro";

import { db, like, Participants } from 'astro:db'

const participants = await db.select().from(Participants).orderBy(Participants.turn);

---

<Layout title="Eurovision 24 homestudio">
    {
        participants.map((participant) => (
            <ParticipantListItem country={participant.country} name={participant.name} song={participant.song} turn={participant.turn} id={participant.id}/>
        ))
    }
</Layout>
